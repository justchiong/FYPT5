<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../common/head %>
</head>
<body>
    <% include ../common/navigation %>
    <div class='container' style='min-height: 450px'><div class='row'><div class='col-md-12'>

        <div class='row'>
            <div class='col-md-12'>
                <div class='page-header'>
                    <h2>Simple Store Math</h2>
                </div>

                <div class='page-body'>
                <form id="calc" name="calc" action="/app/calc" method="post">
                    <fieldset>

                        <div class="form-group ">
                            <label class="  control-label" for="ping_address">Maths equation Input</label>
                            <div class="  controls">

                                <input type="text" name="eqn" value="" id="ping_address" class="form-control" placeholder="(3+3)*2" />
                            </div>
                        </div>

                        <input type="submit" value="Submit" id="ping_0" class="btn btn-primary" />

                    </fieldset>
                </form>
                </div>
            </div>
         </div>

            <% if(output) { %>
            <div class='row'>
                <div class='col-md-12'>
                    <h2>Result</h2>
                    <hr/>
                    
                    <pre><%= output %></pre>

                </div>
            </div>
            <% } %>


    </div></div></div>
    <% include ../common/footer %>
</body>
</html>
